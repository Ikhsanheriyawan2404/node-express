<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">

            <% if (typeof errors != 'undefined') { %>
                <% errors.forEach(error => { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong><i class="bi bi-exclamation-diamond-fill"></i> Error !</strong> <%= error.msg %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% }) %>
            <% } %>

            <h2>Form Tambah Kontak</h2>
            <div class="card">
                <div class="card-body">
                    <form action="/contact" method="post">
                        <div class="mb-3">
                            <label for="nik" class="form-label">NIK</label>
                            <input type="number" class="form-control form-control-sm" name="nik" id="nik" placeholder="Nomor induk kependudukan" required>
                        </div>
                        <div class="mb-3">
                            <label for="name" class="form-label">Nama Lengkap</label>
                            <input type="text" class="form-control form-control-sm" name="name" id="name" placeholder="Nama lengkap" required>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary float-right">Simpan <i class="bi bi-save-fill"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>