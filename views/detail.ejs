<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <% if (contact) { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title"><%= contact.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= contact.nik %></h6>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    <a href="/contact" class="card-link">&laquo Kembali</a>
                </div>
            </div>
            <% } else { %>
                <div class="alert alert-primary" role="alert">
                    NIK tidak ditemukan. <a href="/contact" class="alert-link">kembail ke halaman sebelumnya</a>
                </div>
            <% } %>
        </div>
    </div>
</div>